<div class="row margin-top">
    <div class="col s6">
        <h4>Cadastrar evento</h4>
        <form action="/event" method="POST" class="col s10">
            <div class="row">
                <div class="input-field">
                    <input type="text" name="title" class="validate" minlength="10" maxlength="50" required>
                    <label for="title" data-error="Titulo é obrigatório" data-success="">Titulo</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <input type="date" name="eventDate" class="datepicker">
                    <label for="eventDate">Data do evento</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <textarea name="description" class="materialize-textarea validate" minlength="50" maxlength="500" required></textarea>
                    <label for="description">Descrição</label>
                </div>
            </div>

            <div class="row">
                <button class="btn waves-effect waves-light" type="submit">Salvar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>

    <div class="col s6">
        <ul class="collection with-header">
            <li class="collection-header"><h5>Eventos</h5></li>
            <% for(var i =0;i<events.length;i++) { %>
                <li class="collection-item">
                    <span style="font-size: 18px;" class="title"><%= events[i].title %></span>
                    <span class="secondary-content">Data do evento: <%= formatDate(new Date(events[i].eventDate)) %></span>
                </li>
            <% } %>
        </ul>
    </div>
</div> 

<%
    function formatDate(d) {
        var dd = d.getDate()
        if ( dd < 10 ) dd = '0' + dd
        var mm = d.getMonth()+1
        if ( mm < 10 ) mm = '0' + mm
        var yy = d.getFullYear()
        if ( yy < 10 ) yy = '0' + yy

        return dd+'/'+mm+'/'+yy
    }

%>