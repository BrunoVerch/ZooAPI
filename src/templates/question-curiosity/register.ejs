<div class="row margin-top">
    <div class="col s6">
        <h4>Cadastrar questão</h4>
        <form action="/question" name="questionform" method="POST" class="col s10">
            <div class="row">
                <div class="input-field">
                    <input type="text" name="query" class="validate" minlength="10" required>
                    <label for="query" data-error="Pergunta é obrigatória" data-success="">Pergunta</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <input type="text" name="optionA" class="validate" required>
                    <label for="optionA" data-error="Opção é obrigatória" data-success="">Opção A</label>
                </div>
                <div class="input-field col s6">
                    <input type="text" name="optionB" class="validate" required>
                    <label for="optionB" data-error="Opção é obrigatória" data-success="">Opção B</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <input type="text" name="optionC" class="validate" required>
                    <label for="optionC" data-error="Opção é obrigatória" data-success="">Opção C</label>
                </div>
                <div class="input-field col s6">
                    <input type="text" name="optionD" class="validate" required>
                    <label for="optionD" data-error="Opção é obrigatória" data-success="">Opção D</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <select name="answer" required>
                        <option value="" disabled selected>Escolha uma opção</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>
                    <label for="answer">Resposta</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <select name="ThemeId" required>
                        <option value="" disabled selected>Escolha uma opção</option>
                        <option value="1">Fácil</option>
                        <option value="2">Médio</option>
                        <option value="3">Difícil</option>
                    </select>
                    <label for="ThemeId">Dificuldade</label>
                </div>
            </div>

            <div class="row">
                <button class="btn waves-effect waves-light" type="submit">Salvar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>

    <div class="col s6">
        <h4>Cadastrar curiosidade</h4>
        <form action="/curiosity" name="curiosityform" method="POST" class="col s10" enctype="multipart/form-data">
            
            <div class="row">
                <div class="input-field">
                    <input type="text" name="title" class="validate" minlength="10" required>
                    <label for="title" data-error="Título é obrigatório" data-success="">Título</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                    <input type="text" name="description" class="validate" minlength="10" required>
                    <label for="description" data-error="Descrição é obrigatória" data-success="">Descrição</label>
                </div>
            </div>

            <div class="row">
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Imagem</span>
                        <input type="file" name="image" required>
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>

            <div class="row">
                <button class="btn waves-effect waves-light" type="submit">Salvar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
</div> 